<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/space_xl"
    android:paddingRight="@dimen/space_xl"
    tools:ignore="DisableBaselineAlignment,PxUsage,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp" >

            <com.yeemos.app.view.RoundedImageView
                android:id="@+id/imgIcon"
                android:layout_width="60dp"
                android:layout_height="60dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingRight="8dp"
            android:paddingTop="6dp" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_88_89_91"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_187_187_187"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:weightSum="1" >

            <TextView
                android:id="@+id/btnRemove"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_round_5_rect_bg"
                android:text="Remove"
                android:textColor="@color/color_255_255_255"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="0.6" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
