<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_l">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_l"
        android:paddingLeft="@dimen/space_xl"
        android:paddingRight="@dimen/space_l"
        android:paddingTop="@dimen/space_l">

        <com.yeemos.app.view.CustomUrlImageView
            android:id="@+id/imgUploading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvUploading"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_l"
            android:textColor="@color/color_187_187_187"
            android:textSize="@dimen/MenuTextSize_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgReload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_l"
                android:paddingLeft="@dimen/space_l"
                android:paddingRight="@dimen/space_l"
                android:paddingTop="@dimen/space_l"
                android:src="@drawable/up_retry"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_l"
                android:paddingLeft="@dimen/space_l"
                android:paddingRight="@dimen/space_l"
                android:paddingTop="@dimen/space_l"
                android:src="@drawable/up_close"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/ProgressBar_Upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>