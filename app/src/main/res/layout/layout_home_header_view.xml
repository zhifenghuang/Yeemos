<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yemmos="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/tvExplore"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@id/line2"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="EXPLORE"
        android:textColor="@color/color_88_89_91"
        android:textSize="14sp" />

    <com.yeemos.app.view.SelectItemHorizontalScrollView
        android:id="@+id/selectEmoView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/tvExplore"
        android:layout_centerVertical="true"
        android:fillViewport="false"
        android:scrollbars="none"
        yemmos:select_emo_view_type="select_emo_for_search">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>
    </com.yeemos.app.view.SelectItemHorizontalScrollView>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/selectEmoView"
        android:layout_marginTop="12dp"
        android:background="@color/color_232_232_232" />

    <TextView
        android:id="@+id/tvFeaturing"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@id/line3"
        android:layout_marginLeft="13dp"
        android:gravity="center_vertical"
        android:text="FEATURING"
        android:textColor="@color/color_88_89_91"
        android:textSize="14sp" />

    <com.yeemos.app.view.SelectItemHorizontalScrollView
        android:id="@+id/selectTopicView"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_below="@id/tvFeaturing"
        android:fillViewport="false"
        android:scrollbars="none"
        yemmos:select_emo_view_type="select_topic_for_search">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"></LinearLayout>
    </com.yeemos.app.view.SelectItemHorizontalScrollView>

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/selectTopicView"
        android:layout_marginTop="12dp"
        android:background="@color/color_232_232_232" />

    <TextView
        android:id="@+id/tvRecent"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@id/line4"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="RECENT"
        android:textColor="@color/color_88_89_91"
        android:textSize="14sp" />

</RelativeLayout>
