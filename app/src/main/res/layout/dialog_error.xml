<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_shape_popupwin"
    android:minHeight="100dp"
    android:minWidth="280dp"
    android:orientation="vertical"
    android:paddingBottom="25dp"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="title"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivExclamation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/error_icon_01"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:maxWidth="270dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/color_187_187_187"
        android:textSize="@dimen/MenuTextSize_18"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/leftTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/btn_roundrect_whitebg_redtext"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:textColor="@color/color_170_170_170"
            android:textSize="@dimen/MenuTextSize_14"/>

        <View
            android:id="@+id/viewMid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/rightTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="@drawable/btn_roundrect_redbg_whitetext"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/MenuTextSize_14"/>

        <View
            android:id="@+id/viewRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
    </LinearLayout>

</LinearLayout>